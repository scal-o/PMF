Description
    Calculates pressure and viscous forces over specified patches for a case
    where the solver is incompressible (pressure is kinematic, e.g. m^2/s^2).

\*---------------------------------------------------------------------------*/
forcesMuro_sx_alto
{
	patches		(muro_sx_alto);
	CofR		(0 0 0);
	pitchAxis	(0 1 0);
	liftDir		(0 0 1);
	dragDir		(-1 0 0);
	rho             rhoInf;
	porosity	yes;
	rhoInf		1.225;
	type            forces;
	libs            ("libforces.so");
	writeControl    timeStep;
	timeInterval    1;
	#include	"functionTimeControl"
	timeStart       $timeStart;
	timeEnd         $timeEnd;
	log             on;
}
// ************************************************************************* //
